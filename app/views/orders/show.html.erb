<h2>Shipping Information</h2>
  <p><%= @order.name %></p>
  <p><%= @order.address %></p>
  <p><%= @order.city %></p>
  <p><%= @order.state %></p>
  <p><%= @order.zip %></p>


<h2>Order Details</h2>
<% @items.each do |oi| %>
  <h2><%= oi.item.name %></h2>
  <h3><%= oi.item.merchant.name %></h3>
  <p>Quantity: <%= oi.quantity %> * Price: <%= oi.price %> = Subtotal: <%= oi.subtotal %></p>
  <p>Grand Total: <%= @grand_total %></p>
<% end %>
